/* 主窗口样式 */
QMainWindow {
    background-color: #121212;
    color: #FFFFFF;
}

/* 菜单栏样式 */
QMenuBar {
    background-color: #121212;
    color: #FFFFFF;
    border-bottom: 1px solid #2C2C2C;
}

QMenuBar::item {
    padding: 4px 8px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color: #185b9e;
    color: white;
}

QMenu {
    background-color: #1E1E1E;
    border: 1px solid #2C2C2C;
}

QMenu::item {
    padding: 4px 24px 4px 24px;
    color: #FFFFFF;
}

QMenu::item:selected {
    background-color: #1863ae;
    color: white;
}

/* 聊天界面样式 */
QScrollArea {
    border: none;
    background-color: #121212;
}

QTextEdit {
    border: 1px solid #2C2C2C;
    border-radius: 4px;
    padding: 8px;
    background-color: #1E1E1E;
    color: #FFFFFF;
}

/* 输入框样式 */
QLineEdit {
    border: 1px solid #2C2C2C;
    border-radius: 4px;
    padding: 8px;
    background-color: #1E1E1E;
    color: #FFFFFF;
}

QLineEdit:focus {
    border: 1px solid #1976D2;
}

/* 按钮样式 */
QPushButton {
    background-color: #1976D2;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #2196F3;
}

QPushButton:pressed {
    background-color: #1565C0;
}

QPushButton:disabled {
    background-color: #2C2C2C;
    color: #B0B0B0;
}

/* 工具栏样式 */
QToolBar {
    background-color: #121212;
    border-bottom: 1px solid #2C2C2C;
    spacing: 4px;
    padding: 4px;
}

QToolButton {
    background-color: transparent;
    border: none;
    border-radius: 4px;
    padding: 4px;
}

QToolButton:hover {
    background-color: #155390;
}

QToolButton:pressed {
    background-color: #1565C0;
}

/* 状态栏样式 */
QStatusBar {
    background-color: #121212;
    color: #B0B0B0;
    border-top: 1px solid #2C2C2C;
}

/* 对话框样式 */
QDialog {
    background-color: #121212;
}

/* 标签样式 */
QLabel {
    color: #FFFFFF;
}

/* 复选框样式 */
QCheckBox {
    color: #FFFFFF;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked {
    border: 1px solid #2C2C2C;
    background-color: #1E1E1E;
}

QCheckBox::indicator:checked {
    border: 1px solid #1976D2;
    background-color: #1976D2;
}

/* 下拉框样式 */
QComboBox {
    border: 1px solid #2C2C2C;
    border-radius: 4px;
    padding: 4px 8px;
    background-color: #1E1E1E;
    color: #FFFFFF;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    width: 12px;
    height: 12px;
    background: #1976D2;
    border-radius: 2px;
}

/* 滚动条样式 */
QScrollBar:vertical {
    border: none;
    background-color: #1E1E1E;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #1976D2;
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    border: none;
    background-color: #1E1E1E;
    height: 8px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: #1976D2;
    border-radius: 4px;
    min-width: 20px;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
} 